# Database Settings
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/globetrotter
SQLITE_DB_FILE=globetrotter.db  # Fallback for local development

# Redis Settings
REDIS_URL=redis://localhost:6379/0

# Security Settings
SECRET_KEY=your-secret-key-here  # Change this in production
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Application Settings
DEBUG=True  # Set to False in production
RELOAD=True  # Set to False in production
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development  # Set to production in production

# Game Settings
MAX_ROUNDS=5
POINTS_PER_CORRECT_ANSWER=10
TIME_LIMIT_SECONDS=30

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/globetrotter.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100  # Requests per minute per user
MAX_CONCURRENT_GAMES=3  # Maximum concurrent games per user
